<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColorInverted</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/textColorInverted</item>
    </style>

    <style name="CollapsingLayout">
        <item name="expandedTitleTextAppearance">@style/InvertedText</item>
        <item name="collapsedTitleTextAppearance">@style/InvertedText</item>
    </style>

    <style name="InvertedText">
        <item name="android:textColor">@color/textColorInverted</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="theme">@style/TabTheme</item>
    </style>

    <style name="TabTheme" parent="AppTheme">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="IdTextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="UserLogin">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostID">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Avatar">
        <item name="android:background">@drawable/rounded_avatar_outline</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="Tag">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/lightGrey</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <declare-styleable name="ToggleImageButton">
        <attr name="android:checked" />
    </declare-styleable>

    <style name="ToggleButton">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/toggle_button_background</item>
        <item name="android:tint">@color/toggle_button_tint</item>
    </style>

</resources>
